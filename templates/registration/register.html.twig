{% block title %}S'enregistrer{% endblock %}

{% block body %}
<section class="connection">
 <section>
    <div class="container">
        <!-- SE CONNECTER -->
        <div class="user signinBx">
            <div class="formBx">
                    <form method="post">
                        <a class="title_retour" href="{{path('app_login')}}">← Retour</a>

                        <h1 class="title_connexion">INSCRIPTION</h1> <br/>
                    {{ form_start(registrationForm) }}
