{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Date de naissance</th>
				<td>{{ user.birthdate|date('d-m-Y') }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Mot de passe</th>
				<td>{{ user.password }}</td>
			</tr>
		</tbody>
	</table>

	<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">

		<a class="text-center, buy-now" href="{{ path('app_user_index') }}">Revenir à la liste</a>

		<a class="text-center, buy-now" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>


		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
		<td>
			<button class="suppression-button">
				<a class="text-center, buy-now">Supprimer</a>
			</button>
		</td>
	</form>


	{# {{ include('user/_delete_form.html.twig') }} #}


{% endblock %}

