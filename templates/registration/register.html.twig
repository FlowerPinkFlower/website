{% extends 'base.html.twig' %}

{% block title %}S'enregistrer
{% endblock %}

{% block body %}
<section class="connection">
	<section>
		<div
			class="container">
			<!-- INSCRIPTION -->
			<div class="user signinBx">
				<div class="imgBx"><img src="https://louyetu.fr/wp/wp-content/uploads/2019/11/manif2-1910x0.jpeg"></div>

				<div class="formBx">
					<form method="post">
						<a class="title_retour" href="{{path('app_login')}}">← Retour</a>

						<h1 class="title_connexion">INSCRIPTION</h1>
						<br/>


						{{ form_start(registrationForm) }}
						<div class="form-group">
							{{ form_label(registrationForm.lastname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="form-group">
							{{ form_label(registrationForm.firstname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="form-group">
							{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="form-group">
							{{ form_label(registrationForm.birthdate, 'Date de naissance', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.birthdate, {'attr': {'class': 'form-control'}}) }}
						</div>


						<div class="form-group">
							{{ form_label(registrationForm.plainPassword, 'Mot de Passe', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
						</div>
						<div class="form-check">
							{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
							{{ form_label(registrationForm.agreeTerms, 'Accepter les conditions d\'utilisation', {'label_attr': {'class': 'form-check-label'}}) }}
    					</div>
							<button type="submit" class="btn btn-primary">S'enregistrer</button>
							{# <br/><a class="btn btn-primary" href="{{path('home')}}">S'enregistrer</a> #}

							{{ form_end(registrationForm) }}
						</form>
					</div>
				</div>
			</section>
		</section>
	{% endblock %}


