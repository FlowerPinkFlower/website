{% extends 'base.html.twig' %}

{% block title %}S'enregistrer
{% endblock %}

{% block body %}
	<section class="connection">
		<section>
			<div
				class="container">
				<!-- SE CONNECTER -->
				<div class="user signinBx">
					<div class="imgBx"><img src="https://louyetu.fr/wp/wp-content/uploads/2019/11/manif2-1910x0.jpeg"></div>

					<div class="formBx">
						<form method="post">
							<a class="title_retour" href="{{path('app_login')}}">← Retour</a>

							<h1 class="title_connexion">INSCRIPTION</h1>
							<br/>
							{{ form_start(registrationForm) }}
							{{ form_row(registrationForm.lastname, {
                                label:'Nom'
                            }) }}
							{{ form_row(registrationForm.firstname, {
                                label:'Prénom'
                            }) }}
							{{ form_row(registrationForm.birthdate, {
                                label: 'Date de naissance'
                            }) }}
							{{ form_row(registrationForm.email) }}
							{{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
							{{ form_row(registrationForm.agreeTerms, {
                                label: "J'accepte les conditions"
                            }) }}

							<button type="submit" class="btn btn-primary">S'enregistrer</button>
							{# <br/><a class="btn btn-primary" href="{{path('home')}}">S'enregistrer</a> #}

							{{ form_end(registrationForm) }}
						</form>
					</div>
				</div>
			</section>
            </section>
{% endblock %}


